<div class="login">
  <div class="login-body">
    <a class="login-brand" href="index.html">
      <img class="img-responsive" src="assets/img/logo.svg" alt="Elephant">
    </a>
    <div class="login-form">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.input :email, required: false, autofocus: true, class: 'form-control', placeholder: 'Please enter your email address.' %>
        </div>
        <div class="form-group">
          <%= f.input :password, required: false, class: 'form-control', placeholder: 'Please enter your password.' %>
        </div>

        <%= f.input :remember_me,label: 'Keep me signed in', class: 'custom-control-input', as: :boolean if devise_mapping.rememberable? do %>
          <span aria-hidden="true"> Â· <a href="password-2.html">Forgot password?</a> </span>
        <% end %>  
        <%= f.button :submit, "Log in", class: 'btn btn-primary btn-block' %>
      <% end %>
    </div>
  </div>
  <div class="login-footer">
    Don't have an account? <a href="signup-2.html">Sign Up</a>
  </div>
</div>